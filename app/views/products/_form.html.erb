  <div class="field form-group pad-top">
  

  <%= form_for(@product) do |f| %>
      <% if @product.errors.any? %>
          <div id="error_explanation">

          </div>
      <% end %>
  
    <div class="form-group field">
      <%= f.text_field :name, class: "form-control", placeholder: "name"  %>
      </div>

    <div class="form-group field">
       <%= f.text_area :description, class: "form-control", placeholder: "description"  %>
      </div>

     <div class="form-group field">
       <%= f.text_field :image_url, class: "form-control", placeholder: "image_url" %>
      </div>

    <div class="form-group form field">
       <%= f.text_field :colour, class: "form-control", placeholder: "color" %>
      </div>

     <div class="form-group form field">
       <%= f.text_field :price, class: "form-control", placeholder: "price" %>
      </div>

     <div class: "btn btn-primary btn-block">
      <%= f.submit "Create product", class: "btn btn-primary btn-block", type: "submit" %>
      </div>
  

 <% end %>

   <%= link_to 'Back', products_path %>
    </div> 