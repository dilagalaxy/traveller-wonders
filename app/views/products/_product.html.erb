<div class="container">
  <div class="row">
   <% if signed_in? && current_user.admin? %>
            <h3><%= link_to 'Create new product', new_product_path, class: 'btn btn-default' %></h3>
         <% end %>
         <br>

    <% @products.each do |product| %>
      <div class="col-md-4 col-sm-6 col-xs-12">
        <h3><%= product.name %></h3>
        <% if product.image_url.present? %>
         <%= link_to(image_tag(product.image_url, class: "img-responsive product-image"), product) %>
        <% else %>
            "No image."
        <% end %>
        <p>
          <%= product.description %><br>
          <%= product.colour %><br>
          <%= product.price %>&euro;<br></p>

          <%= link_to 'Show', product, class: 'btn btn-default' %>

          <% if signed_in? && current_user.admin? %>
          <%= link_to 'Edit', edit_product_path(product), class: 'btn btn-default' %>
          <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default'%>
          <% end %>
        </p>
      </div>
    <% end %>
  </div>
</div>