
<% if signed_in? %>
  <div class="container">
    
    <div class="review-container">
      <%= form_for([@product, @product.comments.build], class: "form-group") do |f| %>
        <p>
          <%= f.label :body, "Review" %><br>
          <%= f.text_area :body, class: "form-control  col-md-12 col-sm-12 ", rows: 5 %>
        </p>
        <br>
        <br>
        <p>

         <div class="rating col-xs-12">
          </div>

        </p>  
        <p>
          <%= f.submit "Submit", class: "btn btn-primary " %>
        </p>
      <% end %>
    </div>
  </div>
<% end %>