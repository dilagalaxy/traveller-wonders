<div class="container bg-setting style style5">
  <div class="content">
    <p id="notice"><%= notice %></p>
    <% @products.each do |product| %>
      <div class="product-card shadow">
        <h2 class="centered-text"><%= product.name %></h2>
        <p class="centered-text"><%= product.colour %></p>
        <p class="centered-text"><%= product.price %> â‚¬</p>
        <%= image_tag(product.image_url, alt: "product-image", class: "responsive-img-100") %>
        <p class="centered-text"><%= product.description %></p>
        <p class="centered-text"><%= link_to 'Show', product %></p>
        <p class="centered-text"><%= link_to 'Edit', edit_product_path(product) %></p>
        <p class="centered-text"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div><!--end product-card-->
    <% end %>
  </div><!--end content-->
  <div class="content">
    <p class="centered-text">
      <%= link_to 'New Product', new_product_path %>
    </p>
  </div><!--end content-->
</div><!--end container-->
