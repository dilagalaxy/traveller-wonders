<h1>Contact Us</h1>
  <p>Please feel free to reach out and contact us (but be forewarned we&rsquo;re completely imaginary, so unfortunately we can&rsquo;t respond):</p>
  
 
 <%= flash[:notice] %>
 
 <%= form_tag("/static_pages/thank_you") do %>
 <div class="row">
 	<div class="col-md-4">
 		<div class="form-group">
 			<%= label_tag :name %>
 			<%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name", :required => true %>
 		</div><!-- /form-group -->
 		<div class="form-group">
 			<%= label_tag :email, "Email Address" %>
 			<%= email_field_tag :email, nil, class: "form-control", placeholder: "Enter Email", :required => true %>
 		</div><!-- /form-group -->
 		<div class="form-group">
 			<%= label_tag :message %>
 			<%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message", :required => true %>
 		</div><!-- /form-group -->
 	</div><!-- /col -->
 </div><!-- /row -->
 <%= submit_tag "Send" %>
 <% end %> 