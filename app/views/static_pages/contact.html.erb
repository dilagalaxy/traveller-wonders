<section class="contact">
<%= form_tag("/static_pages/thank_you") do %>
      <div class="container-fluid pad-top-double pad-bottom-double" id="contact">
        <div class="row margin-sides">
          <div class="col-md-12 col-sm-12">
            <h2 class="text-center">contact</h2>
          </div>
          <%= flash[:notice] %>
          <div class="col-lg-4 col-md-12 col-sm-12 pad-top">
            <h3 class="pad-bottom-half">get in touch.</h3>
            <p><span class="glyphicon glyphicon-envelope"></span><br>
            startbeautiful@gmail.com</p>
            <p class=""><span class="glyphicon glyphicon-phone"></span><br>
            +65 90234044</p>
          </div>
        </div>
        <div class="col-lg-8 col-md-12 col-sm-12 pad-top">
         
            <div class="form-group">
               <%= label_tag :name %>
      <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name", :required => true %>
            </div>

            <div class="form-group">
            <%= label_tag :email, "Email Address" %>
      <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email", :required => true, :type => "email" %>
            </div>
            <%= flash[:notice] %>
 <%= form_tag("/static_pages/thank_you") do %>
            <div class="form-group">
             <%= label_tag :message %>
      <%= text_area_tag :message, nil, :class => "form-control", col: 20, rows: 10, :placeholder => "Enter Message", :required => true %> 
            </div>
       <%= submit_tag("Send", :class => "btn btn-primary") %>      
        </div>
      </div>
      <% end %>
    </section>
   
    